<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hotel_room_type_tree" model="ir.ui.view">
        <field name="name">hotel.room.type.tree</field>
        <field name="model">hotel.room.type</field>
        <field name="arch" type="xml">
            <tree string="Loại phòng">
                <field name="code" string="Mã loại"/>
                <field name="name" string="Tên loại"/>
                <field name="description" string="Mô tả"/>
            </tree>
        </field>
    </record>

    <record id="view_hotel_room_type_form" model="ir.ui.view">
        <field name="name">hotel.room.type.form</field>
        <field name="model">hotel.room.type</field>
        <field name="arch" type="xml">
            <form string="Loại phòng">
                <sheet>
                    <group>
                        <group>
                            <field name="code" string="Mã loại"/>
                            <field name="name" string="Tên loại" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Mô tả">
                            <field name="description" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hotel_room_type" model="ir.actions.act_window">
        <field name="name">Loại phòng</field>
        <field name="res_model">hotel.room.type</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>