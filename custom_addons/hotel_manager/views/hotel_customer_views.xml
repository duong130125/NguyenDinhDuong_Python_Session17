<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hotel_customer_tree" model="ir.ui.view">
        <field name="name">hotel.customer.tree</field>
        <field name="model">hotel.customer</field>
        <field name="arch" type="xml">
            <tree string="Khách hàng" default_order="name asc">
                <field name="name"/>
                <field name="identity_card"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="view_hotel_customer_form" model="ir.ui.view">
        <field name="name">hotel.customer.form</field>
        <field name="model">hotel.customer</field>
        <field name="arch" type="xml">
            <form string="Khách hàng">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Họ và tên..."/>
                        </h1>
                    </div>
                    <group>
                        <group name="contact_info" string="Thông tin liên hệ">
                            <field name="identity_card"/>
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group name="address_info" string="Địa chỉ">
                            <field name="address" nolabel="1" placeholder="Địa chỉ..."/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hotel_customer_search" model="ir.ui.view">
        <field name="name">hotel.customer.search</field>
        <field name="model">hotel.customer</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm Khách hàng">
                <field name="name" string="Tên khách hàng" filter_domain="['|', '|', ('name', 'ilike', self), ('phone', 'ilike', self), ('identity_card', 'ilike', self)]"/>
                <field name="phone"/>
                <field name="identity_card"/>
            </search>
        </field>
    </record>

    <record id="action_hotel_customer" model="ir.actions.act_window">
        <field name="name">Khách hàng</field>
        <field name="res_model">hotel.customer</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_hotel_customer_search"/>
    </record>
</odoo>