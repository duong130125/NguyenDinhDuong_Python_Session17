<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hotel_room_tree" model="ir.ui.view">
        <field name="name">hotel.room.tree</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <tree string="Danh sách Phòng" decoration-danger="status == 'maintenance'" decoration-warning="status == 'occupied'" decoration-success="status == 'available'">
                <field name="name"/>
                <field name="floor"/>
                <field name="type_id"/>
                <field name="price_per_night"/>
                <field name="status" widget="badge" decoration-danger="status == 'maintenance'" decoration-warning="status == 'occupied'" decoration-success="status == 'available'"/>
            </tree>
        </field>
    </record>

    <record id="view_hotel_room_form" model="ir.ui.view">
        <field name="name">hotel.room.form</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <form string="Phòng khách sạn">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="P101..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="floor"/>
                            <field name="type_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="price_per_night"/>
                            <field name="status" widget="radio" options="{'horizontal': true}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Mô tả" name="description">
                            <field name="description" placeholder="Mô tả chi tiết phòng..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hotel_room" model="ir.actions.act_window">
        <field name="name">Danh sách Phòng</field>
        <field name="res_model">hotel.room</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>