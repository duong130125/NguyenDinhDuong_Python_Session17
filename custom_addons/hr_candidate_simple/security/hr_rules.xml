<odoo>

    <!-- Recruiter: chỉ thấy record mình tạo -->
    <record id="rule_hr_candidate_recruiter" model="ir.rule">
        <field name="name">Recruiter Own Candidates</field>
        <field name="model_id" ref="model_hr_candidate"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('hr_candidate_simple.group_hr_recruiter'))]"/>
    </record>

    <!-- Manager: thấy tất cả -->
    <record id="rule_hr_candidate_manager" model="ir.rule">
        <field name="name">Manager All Candidates</field>
        <field name="model_id" ref="model_hr_candidate"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('hr_candidate_simple.group_hr_manager'))]"/>
    </record>

    <!-- Customer: thấy tất cả -->
    <record id="rule_hr_candidate_customer" model="ir.rule">
        <field name="name">Customer View Candidates</field>
        <field name="model_id" ref="model_hr_candidate"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('hr_candidate_simple.group_hr_customer'))]"/>
    </record>

</odoo>
