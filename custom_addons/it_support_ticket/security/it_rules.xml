<odoo>

    <!-- Reporter: chỉ thấy phiếu của mình -->
    <record id="rule_it_ticket_reporter" model="ir.rule">
        <field name="name">Reporter Own Tickets</field>
        <field name="model_id" ref="model_it_ticket"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('it_support_ticket.group_it_reporter'))]"/>
    </record>

    <!-- Technician: thấy tất cả -->
    <record id="rule_it_ticket_technician" model="ir.rule">
        <field name="name">Technician All Tickets</field>
        <field name="model_id" ref="model_it_ticket"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('it_support_ticket.group_it_technician'))]"/>
    </record>

    <!-- Manager: thấy tất cả -->
    <record id="rule_it_ticket_manager" model="ir.rule">
        <field name="name">Manager All Tickets</field>
        <field name="model_id" ref="model_it_ticket"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('it_support_ticket.group_it_manager'))]"/>
    </record>

</odoo>
