<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ================= TREE VIEW ================= -->
        <record id="view_hr_candidate_tree" model="ir.ui.view">
            <field name="name">hr.candidate.tree</field>
            <field name="model">hr.candidate</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="birthday"/>
                    <field name="job_id"/>
                    <field name="expected_salary"/>
                    <field name="is_hired"/>
                </tree>
            </field>
        </record>

        <!-- ================= FORM VIEW ================= -->
        <record id="view_hr_candidate_form" model="ir.ui.view">
            <field name="name">hr.candidate.form</field>
            <field name="model">hr.candidate</field>
            <field name="arch" type="xml">
                <form string="Ứng viên">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="gender"/>
                            <field name="birthday"/>
                            <field name="job_id" widget="radio"/>
                            <field name="expected_salary"/>
                            <field name="is_hired"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>

                        <notebook>
                            <page string="CV">
                                <field name="cv_content" />
                            </page>
                            <page string="Ghi chú">
                                <field name="manager_note"/>
                            </page>
                            <page string="Offer">
                              <field name="offer_ids">
                                <tree editable="bottom">
                                    <field name="price"/>
                                    <field name="status"/>
                                </tree>
                              </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ================= ACTION ================= -->
        <record id="hr_candidate_action" model="ir.actions.act_window">
            <field name="name">Danh sách ứng viên tuyển dụng</field>
            <field name="res_model">hr.candidate</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- ================= MENU ================= -->
        <menuitem
            id="hr_root_menu"
            name="HR - Quản lý"
            sequence="10"/>

        <menuitem
            id="hr_secondary_menu"
            name="Danh sách ứng viên tuyển dụng"
            parent="hr_root_menu"
            action="hr_candidate_action"
            sequence="20"/>

    </data>
</odoo>