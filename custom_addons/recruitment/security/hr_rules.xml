<odoo>
    <data>
        <record id="hr_rule_manager" model="ir.rule">
            <field name="name">Hr Rule Manager</field>
            <field name="model_id" ref="model_hr_candidate"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('recruitment.group_hr_manager'))]"/>
        </record>

        <record id="hr_rule_customer" model="ir.rule">
            <field name="name">Hr Rule Customer</field>
            <field name="model_id" ref="model_hr_candidate"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('recruitment.group_hr_customer'))]"/>
        </record>

        <record id="hr_rule_recruiter" model="ir.rule">
            <field name="name">Hr Rule Recruiter</field>
            <field name="model_id" ref="model_hr_candidate"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('recruitment.group_hr_recruiter'))]"/>
        </record>
    </data>
</odoo>